<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainActivity" android:background="@color/backgroundLinearLayoutInterno"
        android:id="@+id/activityMain">

    <com.google.android.material.button.MaterialButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:backgroundTint="@color/background" android:text="@string/menu_sobre"
            android:textColor="@color/colorPrimaryText"
            app:iconPadding="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="1.0" android:id="@+id/btn_ajudar" android:insetLeft="4dp"
            android:insetRight="4dp" android:insetTop="4dp" android:insetBottom="4dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp">

    </com.google.android.material.button.MaterialButton>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/repeticaodegrade1"
            android:id="@+id/imageView3"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ajudar"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="24dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout3"
            android:animateLayoutChanges="false" android:background="@android:color/transparent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginBottom="150dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@color/background" android:text="Jogar" android:textColor="@color/colorAccent"
                app:icon="@drawable/gamepad_variant2" app:iconTint="@color/colorAccent"
                app:iconPadding="@dimen/about_group_text_padding"
                android:isScrollContainer="false" android:id="@+id/btn_jogar"
                android:layout_weight="1"
                android:padding="@dimen/about_group_text_padding"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/about_icon_size"
                android:id="@+id/btn_recordes"
                android:layout_weight="1" app:backgroundTint="@color/background" android:text="recordes"
                android:textColor="@color/colorAccent" app:icon="@drawable/alpha_r_box"
                app:iconTint="@color/colorAccent" app:iconPadding="6dp"
                android:padding="@dimen/about_icon_padding"/>


    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/frameChoose" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>