<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:src="@drawable/designhome3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/imageView2"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:layout_weight="1">
            <ImageButton
                    android:layout_width="300dp"
                    android:id="@+id/btn_gameStart"
                    android:src="@drawable/gamepad_variant"
                    android:layout_height="100dp" android:layout_weight="1"/>
            <ImageButton
                    android:src="@drawable/alpha_a_box"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:id="@+id/btn_records" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>