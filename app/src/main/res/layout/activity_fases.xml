<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.FasesActivity" android:background="@color/backgroundLinearLayoutInterno">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="81dp"
            app:layout_constraintTop_toTopOf="parent"
    >

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="Fases"
                  android:textColor="@android:color/black"
                  android:gravity="center"
                  android:textSize="30dp" android:textAllCaps="true" tools:layout_editor_absoluteY="8dp"
                  tools:layout_editor_absoluteX="16dp"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:id="@+id/linearLayout4" android:layout_marginBottom="68dp"
            app:layout_constraintVertical_bias="0.19">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:background="@android:color/transparent">

            <com.google.android.material.button.MaterialButton
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btn_fase1" android:layout_weight="1"
                    app:iconTint="@color/colorAccent"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/numeric_1_box"
                    app:iconGravity="textStart"/>
            <com.google.android.material.button.MaterialButton
                    android:layout_marginRight="4dp"
                    app:iconTint="@color/colorAccent"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/numeric_2_box"
                    app:iconGravity="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btn_fase2" android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                    app:iconTint="@color/colorAccent"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/numeric_3_box"
                    app:iconGravity="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btn_fase3" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:background="@android:color/transparent">
            <com.google.android.material.button.MaterialButton
                    android:layout_marginRight="4dp"
                    app:iconGravity="textStart"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/blockhelper"
                    app:iconTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageButton3" android:layout_weight="1"
            />
            <com.google.android.material.button.MaterialButton
                    android:layout_marginRight="4dp"
                    app:iconGravity="textStart"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/blockhelper"
                    app:iconTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageButto4" android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                    app:iconGravity="textStart"
                    android:gravity="center"
                    app:backgroundTint="@color/background" android:hapticFeedbackEnabled="false"
                    app:icon="@drawable/blockhelper"
                    app:iconTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/imageButton5" android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>